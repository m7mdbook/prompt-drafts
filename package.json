{
  "name": "prompt-drafts",
  "displayName": "Prompt Drafts",
  "publisher": "m7mdbook",
  "description": "Save and reuse AI prompt drafts",
  "icon": "images/icon.png",
  "version": "0.0.6",
  "repository": {
    "type": "git",
    "url": "https://github.com/m7mdbook/prompt-drafts.git"
  },
  "bugs": {
    "url": "https://github.com/m7mdbook/prompt-drafts/issues"
  },
  "homepage": "https://github.com/m7mdbook/prompt-drafts#readme",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:promptDrafts.save",
    "onCommand:promptDrafts.insert",
    "onCommand:promptDrafts.openManager",
    "onView:promptDrafts.manager"
  ],
  "main": "./dist/extension.js",
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": true
    }
  },
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "promptDrafts",
          "title": "Prompt Drafts",
          "icon": "images/icon.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "promptDrafts.save",
        "title": "Save Prompt Draft"
      },
      {
        "command": "promptDrafts.insert",
        "title": "Insert Prompt Draft"
      },
      {
        "command": "promptDrafts.openManager",
        "title": "Open Prompt Drafts Manager"
      }
    ],
    "views": {
      "promptDrafts": [
        {
          "id": "promptDrafts.manager",
          "name": "Prompt Drafts",
          "type": "webview"
        }
      ]
    },
    "keybindings": [
      {
        "command": "promptDrafts.save",
        "key": "ctrl+alt+s"
      },
      {
        "command": "promptDrafts.insert",
        "key": "ctrl+alt+i"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.80.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  }
}
